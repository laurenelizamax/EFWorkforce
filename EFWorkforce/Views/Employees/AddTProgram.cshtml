@model EFWorkforce.Models.EmployeeTraining

@{
    ViewData["Title"] = "AddTProgram";
}

<h1>AddTProgram</h1>

<h4>EmployeeTraining</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddTProgram">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <input asp-for="EmployeeId" class="control-label" type="hidden"></input>
            </div>
            <div class="form-group">
                <label asp-for="TrainingProgram.Name" class="control-label">Choose A Program</label>
                <select asp-for="TrainingProgram.Name" class="form-control" asp-items="ViewBag.TrainingProgram.Name"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
